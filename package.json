{
  "name": "putty-app",
  "version": "1.0.0",
  "main": "index.ts",
  "scripts": {
    "start": "expo start",
    "android": "expo start --android",
    "ios": "expo start --ios",
    "web": "expo start --web",
    "build:web": "expo export --platform web",
    "test": "playwright test",
    "test:watch": "playwright test --ui",
    "test:debug": "playwright test --debug",
    "test:report": "playwright show-report",
    "test:headed": "playwright test --headed",
    "test:mobile": "playwright test --project='Mobile Chrome' --project='Mobile Safari'",
    "lint": "eslint src/ __tests__/ --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint src/ __tests__/ --ext .ts,.tsx,.js,.jsx --fix",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx}\" \"__tests__/**/*.{ts,tsx,js,jsx}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx}\" \"__tests__/**/*.{ts,tsx,js,jsx}\"",
    "ci": "yarn typecheck && yarn lint && yarn format:check && yarn test"
  },
  "dependencies": {
    "@expo/metro-runtime": "~5.0.4",
    "@react-navigation/native": "^7.1.17",
    "@react-navigation/stack": "^7.4.7",
    "@react-spring/three": "^10.0.1",
    "@react-three/drei": "^10.7.3",
    "@react-three/fiber": "^9.3.0",
    "@react-three/postprocessing": "^3.0.4",
    "cannon-es": "^0.20.0",
    "expo": "^53.0.20",
    "expo-status-bar": "~2.2.3",
    "leva": "^0.10.0",
    "plausible-tracker": "^0.3.9",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "react-native": "0.79.5",
    "react-native-gesture-handler": "^2.28.0",
    "react-native-reanimated": "^4.0.2",
    "react-native-safe-area-context": "^5.6.1",
    "react-native-screens": "^4.15.1",
    "react-native-svg": "^15.12.1",
    "react-native-web": "^0.20.0",
    "react-native-worklets": "^0.4.1",
    "react-spring": "^10.0.1",
    "simplex-noise": "^4.0.3",
    "three": "^0.179.1",
    "three-stdlib": "^2.36.0",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@playwright/test": "^1.55.0",
    "@testing-library/jest-native": "^5.4.3",
    "@testing-library/react-native": "^13.3.1",
    "@types/jest": "^30.0.0",
    "@types/react": "~19.0.10",
    "@types/three": "^0.179.0",
    "@typescript-eslint/eslint-plugin": "^8.40.0",
    "@typescript-eslint/parser": "^8.40.0",
    "detox": "^20.40.2",
    "eslint": "8",
    "eslint-config-expo": "^9.2.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-native": "^5.0.0",
    "jest": "^30.0.5",
    "jest-expo": "^53.0.9",
    "playwright": "^1.55.0",
    "prettier": "^3.6.2",
    "react-test-renderer": "19.0.0",
    "typescript": "~5.8.3"
  },
  "private": true
}
